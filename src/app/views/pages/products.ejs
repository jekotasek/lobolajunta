<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>La Junta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/select/1.2.7/js/dataTables.select.min.js"></script>
  <!-- CSS -->
  <base href="/">
  <link rel="stylesheet" type="text/css" href="css/main.css" >
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
  <!-- Favicon -->
  <link rel=icon href=img/favicon.png>
</head>
<body>
  <script src="/js/fb.js" type="text/javascript"></script>
  <nav class="navbar navbar-dark bg-dark">
    <a href="#" class="navbar-brand mx-auto">LA JUNTA</a>
  </nav>
  <div class="jumbotron text-center">
      <div class="container">
          <h1>¡Hola!</h1>
          <hr>
          <p>AGREGA - MODIFICA - ELIMINA</p>
          <hr>
      </div>
    </div>
  <div class="container">
    <div class="row">
      <div class="col-6 col-md-4">
          <form action="/promos" method="POST" class="card-body">
            <h3 class="card-title">Promos</h3>
                <div class="form-group">
                    <input id="title" type="text" name="name" class="form-control" placeholder="Nombre">
              </div>
            <div class="form-group">
                <input type="text" name="price" class="form-control" placeholder="Precio">
            </div>
            <div class="form-group">
              <input type="text" name="description" class="form-control" placeholder="Descripción">
            </div>
            <hr>              
            <input type="submit" value="Agregar" class="btn btn-primary">
          </form>
      </div>
      <div class="col-12 col-md-8">
          <table id="productstable" class="table table-striped display">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Producto</th>
                  <th>Precio</th>
                  <th>Descripción</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < products.length; i++){ %>
                  <tr>
                    <td> <%= products[i].idproduct %></td>
                    <td> <%= products[i].name %></td>
                    <td> $<%= products[i].price %></td>
                    <td> <%= products[i].description %></td>               
                  </tr>
                <% } %>
              </tbody>
            </table>
      </div>
    </div>
    <div class="row">
          <div class="col">
              <form action="/products" method="POST" class="card-body">
                <h3 class="card-title">Agregar producto</h3>
                    <div class="form-group">
                        <input id="title" type="text" name="name" class="form-control" placeholder="Nombre">
                  </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control" placeholder="Precio">
                </div>
                <div class="form-group">
                  <input type="text" name="description" class="form-control" placeholder="Descripción">
                </div>
                <hr>              
                <input type="submit" value="Agregar" class="btn btn-primary">
              </form>
          </div>
          <div class="col">
              <form action="/productsedit" method="POST" class="card-body">
                <h3 class="card-title">Editar productos</h3>
                <div class="form-group">
                  <input type="text" name="id_products" class="form-control" placeholder="ID de producto a editar">
                </div>
                <div class="form-group">
                    <h4>Disponibilidad</h4>
                    <input type="radio" name="status" value="Existencia"> En existencia<br>
                    <input type="radio" name="status" value="AGOTADO"> AGOTADO<br>
                </div>
                <input type="submit" value="Editar" class="btn btn-dark">
                <input type="submit" value="Borrar producto" class="btn btn-danger" formaction="/productsdelete">
                <input type="submit" value="Limpiar tabla de productos" class="btn btn-danger" formaction="/cleartable">
                <br>
              </form>
          </div>
            
          <hr>
      <div class="container-fluid text-center card">
        <h3>Productos</h3>
        <table id="productstable" class="table table-striped display">
          <thead>
            <tr>
              <th>#</th>
              <th>Producto</th>
              <th>Precio</th>
              <th>Descripción</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < products.length; i++){ %>
              <tr>
                <td> <%= products[i].idproduct %></td>
                <td> <%= products[i].name %></td>
                <td> $<%= products[i].price %></td>
                <td> <%= products[i].description %></td>               
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% include ../partials/index/footer.ejs %>
  <script src="/js/tablestarter.js" type="text/javascript"></script>
</body>
</html>