<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>La Junta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/select/1.2.7/js/dataTables.select.min.js"></script>
  <!-- CSS -->
  <base href="/">
  <link rel="stylesheet" type="text/css" href="css/main.css" >
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
  <!-- Favicon -->
  <link rel=icon href=img/favicon.png>
</head>
<body>
  <script src="/js/fb.js" type="text/javascript"></script>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">La Junta</h1>
      <p class="lead">Manejo de promociones y productos</p>
    </div>
  </div>
  <h1 class="text-center">Promociones</h1>
  <div class="container">
    <div class="row">
      <div class="col border">
          <form action="/promos" method="POST" class="card-body">
            <h3 class="card-title">Nueva</h3>
                <div class="form-group">
                    <input id="title" type="text" name="name" class="form-control" placeholder="Nombre">
              </div>
                <h4>Vigencia:</h4>
                  <div class="form-group">
                      <input type="radio" name="vig" value="Por día"> Hoy<br>
                      <input type="radio" name="vig" value="Semanal"> Semana<br>
                      <input type="radio" name="vig" value="Todo el mes"> Mes<br>
                      <input type="radio" name="vig" value="Viernes"> Viernes<br>
                      <input type="radio" name="vig" value="Lunes y jueves"> Lunes y jueves<br>
                      <input type="radio" name="vig" value="Happy hour"> Happy hour<br>
                  </div>
            
            <div class="form-group">
              <input type="text" name="description" class="form-control" placeholder="Descripción">
            </div>
            <hr>              
            <input type="submit" value="Agregar" class="btn btn-primary btn-block">
          </form>
      </div>
      <div class="col border">
        <form action="/productsedit" method="POST" class="card-body">
          <h3 class="card-title">Borrar</h3>
          <div class="form-group">
            <input type="text" name="id_products" class="form-control" placeholder="ID de promoción a borrar">
          </div>
            <input type="submit" value="Borrar promoción" class="btn btn-danger btn-block" formaction="/promodelete">
          <hr>
            <input type="submit" value="Limpiar tabla" class="btn btn-danger btn-block" formaction="/cleartablepromo">
          <br>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col border">
        <table id="promos" class="table table-striped display">
            <thead>
              <tr>
                <th>ID</th>
                <th>Promo</th>
                <th>Vigencia</th>
                <th>Descripción</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < promos.length; i++){ %>
                <tr>
                  <td> <%= promos[i].idpromos %></td>
                  <td> <%= promos[i].name %></td>
                  <td> <%= promos[i].vig %></td>
                  <td> <%= promos[i].description %></td>               
                </tr>
              <% } %>
            </tbody>
          </table>
    </div>
    </div>
    <h1 class="text-center">Productos</h1>
    <div class="row">
          <div class="col border">
              <form action="/products" method="POST" class="card-body">
                <h3 class="card-title">Nuevo</h3>
                    <div class="form-group">
                        <input id="title" type="text" name="name" class="form-control" placeholder="Nombre">
                  </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control" placeholder="Precio">
                </div>
                <div class="form-group">
                  <input type="text" name="description" class="form-control" placeholder="Descripción">
                </div>
                <hr>              
                <input type="submit" value="Agregar" class="btn btn-primary btn-block">
              </form>
          </div>
          <div class="col border">
              <form action="/productsedit" method="POST" class="card-body">
                <h3 class="card-title">Editar</h3>
                <div class="form-group">
                  <input type="text" name="id_products" class="form-control" placeholder="ID de producto a editar">
                </div>
                <div class="form-group">
                    <h4>Disponibilidad</h4>
                    <input type="radio" name="availability" value="Existencia"> En existencia<br>
                    <input type="radio" name="availability" value="AGOTADO"> AGOTADO<br>
                </div>
                <input type="submit" value="Editar" class="btn btn-dark">
                <input type="submit" value="Borrar producto" class="btn btn-danger" formaction="/productsdelete">
                <input type="submit" value="Limpiar tabla de productos" class="btn btn-danger" formaction="/cleartable">
                <br>
              </form>
          </div>
            
          <hr>
      <div class="container-fluid text-center card">
        <table id="products" class="table table-striped display">
          <thead>
            <tr>
              <th>ID</th>
              <th>Producto</th>
              <th>Precio</th>
              <th>Descripción</th>
              <th>Disponibilidad</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < products.length; i++){ %>
              <tr>
                <td> <%= products[i].idproduct %></td>
                <td> <%= products[i].name %></td>
                <td> $<%= products[i].price %></td>
                <td> <%= products[i].description %></td>  
                <td> <%= products[i].availability %> </td>             
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% include ../partials/index/footer.ejs %>
  <script src="/js/tablestarter.js" type="text/javascript"></script>
</body>
</html>